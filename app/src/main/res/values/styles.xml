<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="question_text">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">@dimen/question_text_margin</item>
    </style>

    <style name="answer_text">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">@dimen/text_left_margin</item>
    </style>

    <style name="radio_group">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">@dimen/text_left_margin</item>
        <item name="android:layout_marginBottom">@dimen/question_text_margin</item>
    </style>

    <style name="radio_button">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
